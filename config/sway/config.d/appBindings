# Start a terminal
bindsym $mod+Return exec $term

# Kill focused window
bindsym $mod+q kill

# Start your launcher
bindsym $mod+d exec dmenu_path | wmenu -b -f "MesloLGS Nerd Font Mono 12" -i -p "App: " | xargs swaymsg exec --
bindsym $mod+Shift+d exec rofi -no-lazy-grab -show drun -theme $HOME/.config/hypr/rofi/list_launcher.rasi
bindsym $mod+b exec rofi-bluetooth
bindsym $mod+g exec rofi -show filebrowser
bindsym $mod+p exec rofi-rbw
bindsym $mod+n exec networkmanager_dmenu
bindsym $mod+Shift+v exec wl-clipboard-history -p "$(wl-clipboard-history -l 20 | tr -d '\200-\377' | sed 's/\(.\{30\}\).*/\1.../' | dmenu | cut -d ',' -f1)" | wl-copy

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal

bindsym $mod+Ctrl+Shift+S exec grimblast save screen $(xdg-user-dir PICTURES)/Screenshots/$(date +'%Y%m%d%H%M%S_1.png')
bindsym $mod+Ctrl+s exec grimblast --notify save area $(xdg-user-dir PICTURES)/Screenshots/$(date +'%Y%m%d%H%M%S_1.png')
bindsym $mod+Shift+s exec grimblast --notify copy area
bindsym $mod+Alt+s exec grimblast --notify copy window
