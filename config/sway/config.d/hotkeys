bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

bindsym $mod+XF86AudioLowerVolume exec ~/.config/sway/scripts/brightness.sh down
bindsym $mod+XF86AudioRaiseVolume exec ~/.config/sway/scripts/brightness.sh up
bindsym $mod+Shift+XF86AudioLowerVolume exec ~/.config/sway/scripts/brightness.sh fall
bindsym $mod+Shift+XF86AudioRaiseVolume exec ~/.config/sway/scripts/brightness.sh jump
bindsym $mod+XF86AudioMute exec ~/.config/sway/scripts/brightness.sh 0
bindsym $mod+Shift+XF86AudioMute exec ~/.config/sway/scripts/brightness.sh 100
