##################### [ Media ] #####################

bindsym XF86AudioPlay exec ~/.config/sway/scripts/media.sh play-pause
bindsym XF86AudioNext exec ~/.config/sway/scripts/media.sh next
bindsym XF86AudioPrev exec ~/.config/sway/scripts/media.sh previous
bindsym XF86Tools exec ~/.config/sway/scripts/media.sh back 
bindsym XF86Launch5 exec ~/.config/sway/scripts/media.sh shuffle
bindsym XF86Launch6 exec ~/.config/sway/scripts/media.sh forward
bindsym XF86Launch7 exec ~/.config/sway/scripts/media.sh wayback
bindsym XF86Launch8 exec ~/.config/sway/scripts/media.sh loop
bindsym XF86Launch9 exec ~/.config/sway/scripts/media.sh wayforward
bindsym XF86TouchpadOff exec ~/.config/sway/scripts/media.sh player
bindsym --border --whole-window $mod+button4 opacity minus 0.05
bindsym --border --whole-window $mod+button5 opacity plus 0.05
bindsym --border --whole-window $mod+Shift+button4 opacity minus 0.01
bindsym --border --whole-window $mod+Shift+button5 opacity plus 0.01


##################### [ Volume ] #####################

bindsym XF86AudioRaiseVolume exec ~/.config/sway/scripts/volume.sh up
bindsym XF86AudioLowerVolume exec ~/.config/sway/scripts/volume.sh down

bindsym Ctrl+XF86AudioRaiseVolume exec ~/.config/sway/scripts/volume.sh more
bindsym Ctrl+XF86AudioLowerVolume exec ~/.config/sway/scripts/volume.sh less

bindsym Alt+XF86AudioRaiseVolume exec ~/.config/sway/scripts/volume.sh bit
bindsym Alt+XF86AudioLowerVolume exec ~/.config/sway/scripts/volume.sh bot

bindsym Shift+XF86AudioRaiseVolume exec ~/.config/sway/scripts/volume.sh big
bindsym Shift+XF86AudioLowerVolume exec ~/.config/sway/scripts/volume.sh small

bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

##################### [ Brightness ] #####################

bindsym $mod+XF86AudioLowerVolume exec ~/.config/sway/scripts/brightness.sh down all manual
bindsym $mod+XF86AudioRaiseVolume exec ~/.config/sway/scripts/brightness.sh up all manual
bindsym $mod+Shift+XF86AudioLowerVolume exec ~/.config/sway/scripts/brightness.sh bottom all manual
bindsym $mod+Shift+XF86AudioRaiseVolume exec ~/.config/sway/scripts/brightness.sh top all manual
bindsym $mod+XF86AudioMute exec ~/.config/sway/scripts/brightness.sh 0 all manual
bindsym $mod+Shift+XF86AudioMute exec ~/.config/sway/scripts/brightness.sh 100 all manual

bindsym $mod+Ctrl+XF86AudioLowerVolume exec ~/.config/sway/scripts/brightness.sh down 0xa manual
bindsym $mod+Ctrl+XF86AudioRaiseVolume exec ~/.config/sway/scripts/brightness.sh up 0xa manual
bindsym $mod+Ctrl+Shift+XF86AudioLowerVolume exec ~/.config/sway/scripts/brightness.sh bottom 0xa manual
bindsym $mod+Ctrl+Shift+XF86AudioRaiseVolume exec ~/.config/sway/scripts/brightness.sh top 0xa manual
bindsym $mod+Ctrl+XF86AudioMute exec ~/.config/sway/scripts/brightness.sh 0 0xa manual
bindsym $mod+Ctrl+Shift+XF86AudioMute exec ~/.config/sway/scripts/brightness.sh 100 0xa manual

bindsym $mod+Alt+XF86AudioLowerVolume exec ~/.config/sway/scripts/brightness.sh down 0x9 manual
bindsym $mod+Alt+XF86AudioRaiseVolume exec ~/.config/sway/scripts/brightness.sh up 0x9 manual
bindsym $mod+Alt+Shift+XF86AudioLowerVolume exec ~/.config/sway/scripts/brightness.sh bottom 0x9 manual
bindsym $mod+Alt+Shift+XF86AudioRaiseVolume exec ~/.config/sway/scripts/brightness.sh top 0x9 manual
bindsym $mod+Alt+XF86AudioMute exec ~/.config/sway/scripts/brightness.sh 0 0x9 manual
bindsym $mod+Alt+Shift+XF86AudioMute exec ~/.config/sway/scripts/brightness.sh 100 0x9 manual


bindsym $mod+Ctrl+Alt+XF86AudioLowerVolume exec ~/.config/sway/scripts/brightness.sh down 0x10 manual
bindsym $mod+Ctrl+Alt+XF86AudioRaiseVolume exec ~/.config/sway/scripts/brightness.sh up 0x10 manual
bindsym $mod+Ctrl+Alt+Shift+XF86AudioLowerVolume exec ~/.config/sway/scripts/brightness.sh bottom 0x10 manual
bindsym $mod+Ctrl+Alt+Shift+XF86AudioRaiseVolume exec ~/.config/sway/scripts/brightness.sh top 0x10 manual
bindsym $mod+Ctrl+Alt+XF86AudioMute exec ~/.config/sway/scripts/brightness.sh 0 0x10 manual
bindsym $mod+Ctrl+Alt+Shift+XF86AudioMute exec ~/.config/sway/scripts/brightness.sh 100 0x10 manual

##################### [ Apps ] #####################

bindsym XF86Calculator exec gnome-calculator

