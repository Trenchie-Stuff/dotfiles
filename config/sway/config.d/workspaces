

mouse_warping container
focus_follows_mouse yes

output * adaptive_sync off

output $pDisplay {
  resolution $pWidthx1440@165Hz position 0,1440
#  transform 90
}
output $sDisplay {
  resolution 3440x1440@100Hz 
  position 0,0
}
output $tDisplay {
  resolution 2560x1440@60Hz 
  position -2560,1440
}

bindsym $mod+Escape output $sDisplay power off
bindsym $mod+Shift+Escape output $sDisplay power on
bindsym $mod+Ctrl+Escape output $tDisplay power off
bindsym $mod+Ctrl+Shift+Escape output $tDisplay power on
bindsym $mod+Alt+Escape output $pDisplay power off
bindsym $mod+Alt+Shift+Escape output $pDisplay power on
#bindsym $mod+Ctrl+Escape exec ddcutil setvcp '60' '0x0f'  --bus 0xa
#bindsym $mod+Alt+Escape exec ddcutil setvcp '60' '0x11'  --bus 0xa

#output $pDisplay resolution 2560x1440@165Hz position 0,1120
#output $sDisplay resolution 2560x1440 position 2560,0 transform 90

#output $pDisplay mode 2560x1440@165Hz position 0,0
#output $sDisplay mode 2560x1440 position 2560,0


workspace "1" output $pDisplay
workspace "2" output $pDisplay
workspace "3" output $pDisplay
workspace "4" output $pDisplay
workspace "5" output $pDisplay
workspace "6" output $pDisplay
workspace "7" output $pDisplay
workspace "8" output $pDisplay


bindsym $mod+1 workspace "1"
bindsym $mod+2 workspace "2"
bindsym $mod+3 workspace "3"
bindsym $mod+4 workspace "4"
bindsym $mod+5 workspace "5"
bindsym $mod+6 workspace "6"
bindsym $mod+7 workspace "7"
bindsym $mod+8 workspace "8"

bindsym $mod+Shift+1 move container to workspace "1"
bindsym $mod+Shift+2 move container to workspace "2"
bindsym $mod+Shift+3 move container to workspace "3"
bindsym $mod+Shift+4 move container to workspace "4"
bindsym $mod+Shift+5 move container to workspace "5"
bindsym $mod+Shift+6 move container to workspace "6"
bindsym $mod+Shift+7 move container to workspace "7"
bindsym $mod+Shift+8 move container to workspace "8"



workspace "11" output $sDisplay
workspace "11" gaps outer 0
workspace "12" output $sDisplay
workspace "12" gaps outer 0
workspace "13" output $sDisplay
workspace "13" gaps outer 0
workspace "14" output $sDisplay
workspace "14" gaps outer 0
workspace "15" output $sDisplay
workspace "15" gaps outer 0
workspace "16" output $sDisplay
workspace "16" gaps outer 0
workspace "17" output $sDisplay
workspace "17" gaps outer 0
workspace "18" output $sDisplay
workspace "18" gaps outer 0

bindsym $mod+Alt+1 workspace "11"
bindsym $mod+Alt+2 workspace "12"
bindsym $mod+Alt+3 workspace "13"
bindsym $mod+Alt+4 workspace "14"
bindsym $mod+Alt+5 workspace "15"
bindsym $mod+Alt+6 workspace "16"
bindsym $mod+Alt+7 workspace "17"
bindsym $mod+Alt+8 workspace "18"

bindsym $mod+Alt+Shift+1 move container to workspace "11"
bindsym $mod+Alt+Shift+2 move container to workspace "12"
bindsym $mod+Alt+Shift+3 move container to workspace "13"
bindsym $mod+Alt+Shift+4 move container to workspace "14"
bindsym $mod+Alt+Shift+5 move container to workspace "15"
bindsym $mod+Alt+Shift+6 move container to workspace "16"
bindsym $mod+Alt+Shift+7 move container to workspace "17"
bindsym $mod+Alt+Shift+8 move container to workspace "18"




workspace "21" output $tDisplay
workspace "21" gaps outer 0
workspace "22" output $tDisplay
workspace "22" gaps outer 0
workspace "23" output $tDisplay
workspace "23" gaps outer 0
workspace "24" output $tDisplay
