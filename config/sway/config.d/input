input * repeat_delay 300
input * repeat_rate 30

exec ydotoold

mode "mouse" {
	# set your three speeds here

	set $slow 1
	set $medium 5
	set $quick 10
	set $fast 50

	# Mouse movement (slow/fine-tuned) -- vim keybindings

	#L
	bindsym Shift+j exec ydotool mousemove -x -$slow -y 0
	bindsym Shift+Left exec ydotool mousemove -x -$medium -y 0
	bindsym j exec ydotool mousemove -x -$quick -y 0
	bindsym Left exec ydotool mousemove -x -$fast -y 0
	#D
	bindsym Shift+k exec ydotool mousemove -y $slow -x 0
	bindsym Shift+Down exec ydotool mousemove -y $medium -x 0
	bindsym k exec ydotool mousemove -y $quick -x 0
	bindsym Down exec ydotool mousemove -y $fast -x 0
	#U
	bindsym Shift+i exec ydotool mousemove -y -$slow -x 0
	bindsym Shift+Up exec ydotool mousemove -y -$medium -x 0
	bindsym i exec ydotool mousemove -y -$quick -x 0
	bindsym Up exec ydotool mousemove -y -$fast -x 0
	#R
	bindsym Shift+l exec ydotool mousemove -x $slow -y 0
	bindsym Shift+Right exec ydotool mousemove -x $medium -y 0
	bindsym l exec ydotool mousemove -x $quick -y 0
	bindsym Right exec ydotool mousemove -x $fast -y 0

	# Mouse movement (special down-right)	
	# bindsym m exec xdotool mousemove_relative 10 10

	# Left Click
	bindsym u exec ydotool click 0xC0

	# Middle Click
	bindsym 8 exec ydotool click 0xC2

	# Right Click
	bindsym o exec ydotool click 0xC1

	# Left Click-and-drag
	bindsym Shift+u exec xdotool mousedown 0x40

	# Middle Click-and-drag 
	bindsym Shift+8 exec xdotool mousedown 0x42

	# Right Click-and-drag
	bindsym Shift+o exec xdotool mousedown 0x41

	# Left Drag release
	bindsym $mod+u exec xdotool mouseup 0x80

	# Middle Drag release
	bindsym $mod+8 exec xdotool mouseup 0x82

	# Right Drag release
	bindsym $mod+o exec xdotool mouseup 0x81

	# return to normal keybindings -- IMPORTANT!!


	bindsym Escape mode "default"
}

bindsym $mod+m mode "mouse"